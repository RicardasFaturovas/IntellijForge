<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>org.ricardasfaturovas.JavaFileCreator</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Java File Creator</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://github.com/RicardasFaturovas">Personal Github</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
        Quickly create Java files (classes, interfaces, records, enums) with keyboard shortcuts from any context in the editor (as opposed to having a file or package selected in the file explorer.<br>
        <br>
        <strong>Features:</strong><br>
        • Create Java classes, interfaces, records, and enums with smart package detection<br>
        • Keyboard shortcuts: Ctrl+Shift+J → C (class), Ctrl+Shift+J → I (interface), Ctrl+Shift+J → R (record), Ctrl+Shift+J → E (enum)<br>
        • On macOS: ⌘+Shift+J → C/I/R/E<br>
        • Auto-completion for package names<br>
        • Automatically opens the created file in the editor<br>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">

    </extensions>
    <actions>
        <action id="CreateJavaClass" class="org.ricardasfaturovas.classcreator.actions.CreateClassAction" text="Create Java Class">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift J" second-keystroke="C"/>
        </action>
        <action id="CreateJavaInterface" class="org.ricardasfaturovas.classcreator.actions.CreateInterfaceAction" text="Create Java Interface">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift J" second-keystroke="I"/>
        </action>
        <action id="CreateJavaRecord" class="org.ricardasfaturovas.classcreator.actions.CreateRecordAction" text="Create Java Record">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift J" second-keystroke="R"/>
        </action>
        <action id="CreateJavaEnum" class="org.ricardasfaturovas.classcreator.actions.CreateEnumAction" text="Create Java Enum">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift J" second-keystroke="E"/>
        </action>
    </actions>
</idea-plugin>